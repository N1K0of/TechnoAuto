<Page x:Class="TechnoAuto2.MainPages.AddNewUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TechnoAuto2.MainPages"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1300"
      Title="AddNewUser">

    <Grid>
        <TextBlock Text="ДОБАВИТЬ ПОЛЬЗОВАТЕЛЯ"
                   HorizontalAlignment="Center" VerticalAlignment="Top"
                   FontSize="60" Foreground="#3E3B6A" FontWeight="SemiBold"/>

        <StackPanel Width="300" Height="500" HorizontalAlignment="Left" Margin="250,0,0,0">

            <TextBlock Text="Имя" FontSize="25"/>

            <TextBox x:Name="EnterFirstName" Height="45"
          FontSize="28" />

            <TextBlock Text="Фамилия" FontSize="25"/>

            <TextBox x:Name="EnterLastName" Height="45"                     
          FontSize="28" 
          Margin="0,0,0,0"/>

            <TextBlock Text="Отчество" FontSize="25"/>

            <TextBox x:Name="EnterMiddleName" Height="45"                     
             FontSize="28" 
             Margin="0,0,0,0"/>

            <TextBlock Text="Номер телефона" FontSize="25"/>

            <TextBox x:Name="EnterPhone" Height="45"                     
          FontSize="28" 
         Margin="0,0,0,0"/>

            <TextBlock Text="Почта" FontSize="25"/>

            <TextBox x:Name="EnterEmail" Height="45"                     
          FontSize="28" 
           Margin="0,0,0,0"/>

            <TextBlock Text="Отдел" FontSize="25"/>

            <ComboBox x:Name="ChooseDepartment" Height="45"                      
            Margin="0,0,0,0"
            FontSize="28"/>
        </StackPanel>

        <StackPanel Width="300" Height="500" HorizontalAlignment="Right" Margin="0,0,250,0">

            <TextBlock Text="Адрес" FontSize="25"/>

            <TextBox x:Name="EnterAdress" Height="45"                     
          FontSize="28"
          Margin="0,0,0,0"/>

            <TextBlock Text="Дата рождения" FontSize="25"/>

            <DatePicker x:Name="EnterDateOfBirth" Height="45"
             FontSize="28"                    
             Margin="0,0,0,0"/>

            <TextBlock Text="Логин" FontSize="25"/>

            <TextBox x:Name="EnterLogin" Height="45"                     
          FontSize="28" 
          Margin="0,0,0,0"/>

            <TextBlock Text="Пароль" FontSize="25"/>

            <TextBox x:Name="EnterPassword" Height="45"                     
          FontSize="28" 
          Margin="0,0,0,0"/>

            <TextBlock Text="Дата приема на работу" FontSize="25"/>

            <DatePicker x:Name="EnterDatePriem" Height="45"                     
                FontSize="28"
                 Margin="0,0,0,0"/>

            <TextBlock Text="Роль" FontSize="25"/>

            <ComboBox x:Name="ChooseRole" Height="45"
              FontSize="28" 
              Margin="0,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Width="600" Height="60"
                    HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,20,100">

            <Button x:Name="Cancel" Content="ОТМЕНИТЬ" Width="220" 
                    Foreground="Black" BorderBrush="White" Click="Cancel_Click"
                     Height="40" Background="#F68787"/>

            <Button x:Name="Add" Content="СОХРАНИТЬ" Width="220" Margin="160,0,0,0"
                    Background="#80AF8D" BorderBrush="White" Height="40" Click="Add_Click"/>

        </StackPanel>

    </Grid>
</Page>

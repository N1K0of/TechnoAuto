<Window x:Class="TechnoAuto2.MainWindows.Autorezats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        xmlns:local="clr-namespace:TechnoAuto2.MainWindows"
        mc:Ignorable="d"
        Title="Autorezats" Height="1050" Width="1980"
        WindowStartupLocation="CenterScreen" WindowStyle="None">
    
    <Grid>
        <Grid Background="#CDCDCD">
            <Border Height="84" VerticalAlignment="Top" Background="White"/>
            <StackPanel Height="84" VerticalAlignment="Top" Orientation="Horizontal">
                <Image Source="/Resource/Photo/10252-NML4GG-no-bg-preview (carve.photos).png" Height="180" VerticalAlignment="Center"/>
                <Image Source="/Resource/Photo/Сочетание 13.png" Height="57" Width="260" VerticalAlignment="Center"/>
            </StackPanel>

            <TextBlock Text="Вход в личный кабинет" FontSize="24"
                           VerticalAlignment="Center" HorizontalAlignment="Left" Margin="413,0,0,500"/>


            <Image Source="/Resource/Photo/Rectangle 1.png" Height="432" Width="285" Margin="400,0,0,0" HorizontalAlignment="Left"/>

            <StackPanel Height="432" Width="285" HorizontalAlignment="Left" Margin="400,0,0,0">
                <TextBlock Text="E-mail/Логин" HorizontalAlignment="Center" FontSize="25" Foreground="White" Margin="0,50,0,0"/>
                <TextBlock Text="Пароль" HorizontalAlignment="Center" FontSize="25" Foreground="White" Margin="0,60,0,0"/>
            </StackPanel>


            <Image Source="/Resource/Photo/Rectangle 2.png" Height="432" Width="566"/>


            <StackPanel Height="432" Width="566">
                <TextBox x:Name="EnterEmail" Height="50" Margin="0,40,0,0" Width="498"                    
                     FontSize="30"/>

                <PasswordBox x:Name="EnterPassword" Height="50" Width="498"
                         Margin="0,50,0,0"                        
                         FontSize="30"/>

                <Button x:Name="LogIn"
                    Background="#80AF8D"
                    Foreground="White"
                    Width="383" Height="52"
                    Margin="0,50,0,0"
                    Content="ВОЙТИ"
                    FontSize="18"
                    BorderBrush="White" Click="LogIn_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Width="500" Margin="0,300,0,0">

                <TextBlock Text="Забыли пароль?"
                       Foreground="#AFAFAF" FontSize="20" 
                       TextDecorations="Underline" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown_1"/>

                <TextBlock Text="Зарегистрироваться" FontSize="20"
                       Foreground="#AFAFAF"
                       TextDecorations="Underline" Margin="166,0,0,0" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,15,50,0">
                     
                <Button x:Name="MinimizeButton" Background="White" Width="50" Height="50" ToolTip="Свернуть" Click="MinimizeButton_Click" FontSize="35">
                    <Image Source="/Resource/Photo/icon (2).png" />
                </Button>

                <Button x:Name="CloseButton"  Background="White" Width="50" Height="50" ToolTip="Закрыть" Click="CloseButton_Click" Margin="5,0,0,0" FontSize="35">
                    <Image Source="/Resource/Photo/icon (1).png" />
                </Button>

            </StackPanel>
        </Grid>

    </Grid>
</Window>

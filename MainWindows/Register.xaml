<Window x:Class="TechnoAuto2.MainWindows.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"       
        xmlns:local="clr-namespace:TechnoAuto2.MainWindows"
        mc:Ignorable="d"
        Title="Register" Height="1050" Width="1980"
        WindowStartupLocation="CenterScreen" WindowStyle="None">

    <Grid Background="#CDCDCD">
        <Border Height="84" VerticalAlignment="Top" Background="White"/>

        <StackPanel Height="84" VerticalAlignment="Top" Orientation="Horizontal">
            <Image Source="/Resource/Photo/10252-NML4GG-no-bg-preview (carve.photos).png" Height="180" VerticalAlignment="Center"/>
            <Image Source="/Resource/Photo/Сочетание 13.png" Height="57" Width="260" VerticalAlignment="Center"/>
        </StackPanel>

        <TextBlock Text="Регистарция" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="430,0,0,500"/>



        <Image Source="/Resource/Photo/Rectangle 1.png" Height="470" Width="305" Margin="350,0,0,0" HorizontalAlignment="Left"/>

        <StackPanel Height="432" Width="285" HorizontalAlignment="Left" Margin="360,0,0,0">
            <TextBlock Text="E-mail" HorizontalAlignment="Center" FontSize="23" Foreground="White" Margin="0,20,0,0"/>
            <TextBlock Text="Пароль" HorizontalAlignment="Center" FontSize="23" Foreground="White" Margin="0,40,0,0"/>
            <TextBlock Text="Телефона" HorizontalAlignment="Center" FontSize="23" Foreground="White" Margin="0,40,0,0"/>
            <TextBlock Text="Фамилия/Имя/Отчество" HorizontalAlignment="Center" FontSize="23" Foreground="White" Margin="0,40,0,0"/>
        </StackPanel>


        <Image Source="/Resource/Photo/Rectangle 2.png" Height="470" Width="599"/>


        <StackPanel Height="432" Width="599">
            <TextBox x:Name="EnterEmail" Height="50" Margin="0,20,0,0" Width="528"
                    
                     FontSize="30"/>

            <PasswordBox x:Name="EnterPassword" Height="50" Width="528"
                         Margin="0,20,0,0"
                         
                         FontSize="30"/>

            <TextBox x:Name="EnterPhoneNumber" Height="50" Margin="0,20,0,0" Width="528"
                    
                     FontSize="30"/>

            <Button x:Name="LogIn"
                    Background="#80AF8D"
                    Foreground="White"
                    Width="383" Height="42"
                    Margin="0,140,0,0"
                    Content="ЗАРЕГИСТРИРОВАТЬСЯ"
                    FontSize="18"
                    BorderBrush="White"
                    Click="LogIn_Click"/>
        </StackPanel>

        <StackPanel VerticalAlignment="Center" Width="500" Margin="0,390,0,0"
                    HorizontalAlignment="Center">

            <TextBlock Text="У меня уже есть аккаунт"
                       Foreground="#AFAFAF" FontSize="20" 
                       TextDecorations="Underline" HorizontalAlignment="Center" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,15,50,0">
            <Button x:Name="MinimizeButton" Background="White" Width="50" Height="50" ToolTip="Свернуть" Click="MinimizeButton_Click" FontSize="35">
                <Image Source="/Resource/Photo/icon (2).png" />
            </Button>

            <Button x:Name="CloseButton"  Background="White" Width="50" Height="50" ToolTip="Закрыть" Click="CloseButton_Click" Margin="5,0,0,0" FontSize="35">
                <Image Source="/Resource/Photo/icon (1).png" />
            </Button>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Height="50" Width="530" Margin="0,65,0,0">

            <TextBox x:Name="EnterLastName"
                     Width="170"
                     
                     FontSize="30"
                     Margin="2,0,0,0"/>

            <TextBox x:Name="EnterFirstName"
                     Width="130"
                    
                     FontSize="30"
                     Margin="16,0,0,0"/>

            <TextBox x:Name="EnterMidleName"
                     Width="195"
                    
                     FontSize="30"
                     Margin="16,0,0,0"/>
        </StackPanel>

        <TextBlock Text="Нажимая «Зарегистрироваться», я принимаю"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,190,270,0"/>

        <TextBlock Text="Условиями использования"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="135,190,0,0"
                   Foreground="#0095FF"/>

        <TextBlock Text="и соглашаюсь c"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="375,190,0,0"
                   />

        <TextBlock Text="Политикой конфиденциальности"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,230,340,0"
                   Foreground="#0095FF"/>

    </Grid>

</Window>

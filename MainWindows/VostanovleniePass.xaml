<Window x:Class="TechnoAuto2.MainWindows.VostanovleniePass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:TechnoAuto2.MainWindows"
        mc:Ignorable="d"
        Title="VostanovleniePass" Height="1050" Width="1980"
        WindowStartupLocation="CenterScreen" WindowStyle="None">
    
    <Grid Background="#CDCDCD">
        
        <Border Height="84" VerticalAlignment="Top" Background="White"/>
        
        <StackPanel Height="84" VerticalAlignment="Top" Orientation="Horizontal">
            <Image Source="/Resource/Photo/10252-NML4GG-no-bg-preview (carve.photos).png" Height="180" VerticalAlignment="Center"/>
            <Image Source="/Resource/Photo/Сочетание 13.png" Height="57" Width="260" VerticalAlignment="Center"/>
        </StackPanel>

        <TextBlock Text="Восстановление пароля" FontSize="24"
                        VerticalAlignment="Center" HorizontalAlignment="Left" Margin="410,0,0,500"/>


        <Image Source="/Resource/Photo/Rectangle 1.png" Height="432" Width="285" Margin="400,0,0,0" HorizontalAlignment="Left"/>

        <StackPanel Height="432" Width="285" HorizontalAlignment="Left" Margin="400,0,0,0">
            <TextBlock Text="E-mail" HorizontalAlignment="Center" FontSize="25" Foreground="White" Margin="0,50,0,0"/>
            <TextBlock Text="Логин" HorizontalAlignment="Center" FontSize="25" Foreground="White" Margin="0,60,0,0"/>
            <TextBlock Text="Новый пароль" HorizontalAlignment="Center" FontSize="25" Foreground="White" Margin="0,60,0,0"/>
        </StackPanel>


        <Image Source="/Resource/Photo/Rectangle 2.png" Height="432" Width="566"/>


        <StackPanel Height="432" Width="566">
            <TextBox x:Name="EnterEmail" Height="50" Margin="0,40,0,0" Width="498"                 
                  FontSize="30"/>

            <TextBox x:Name="EnterLogin" Height="50" Width="498"
                      Margin="0,50,0,0"
                      
                      FontSize="30"/>
            <TextBox x:Name="EnterNewPassword" Height="50" Width="498"
                      Margin="0,50,0,0"                      
                      FontSize="30"/>

            <Button x:Name="LogIn"
                 Background="#80AF8D"
                 Foreground="White"
                 Width="383" Height="52"
                 Margin="0,50,0,0"
                 Content="СОХРАНИТЬ"
                 FontSize="18"
                 BorderBrush="White" Click="LogIn_Click"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Width="500" Margin="0,300,0,0"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10,15,50,0">
            <Button x:Name="BackButton" Background="White" Width="50" Height="50" ToolTip="Назад" Click="BackButton_Click">
                <iconPacks:PackIconMaterial Kind="ArrowLeft" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>

            <Button x:Name="MinimizeButton" Background="White" Width="50" Height="50" ToolTip="Свернуть" Click="MinimizeButton_Click">
                <iconPacks:PackIconMaterial Kind="WindowMinimize" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>

            <Button x:Name="CloseButton" Background="White" Width="50" Height="50" ToolTip="Закрыть" Click="CloseButton_Click" Margin="5,0,0,0">
                <iconPacks:PackIconMaterial Kind="WindowClose" Width="24" Height="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
        </StackPanel>
    </Grid>

</Window>
